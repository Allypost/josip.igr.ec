---
import { cn } from "~/app/css";
import { getListableBlogPosts } from "~/app/helpers";
import FormattedDate from "~components/FormattedDate.astro";
import MainLayout from "~layouts/MainLayout.astro";

const posts = await getListableBlogPosts();
---

<MainLayout
  title="Blog"
  description="A blog where I rant and write about whatever comes to mind. Factuality is not guaranteed."
>
  <section>
    <h1 class="mb-4 text-center text-3xl font-bold">Blog posts</h1>

    {
      posts.length > 0 ? (
        <ul>
          {posts.map((post) => (
            <li class="mt-2 max-sm:mt-5">
              <article
                class={cn(
                  "flex items-center gap-2 rounded max-sm:flex-col max-sm:items-start max-sm:gap-0",
                  {
                    "bg-red-500/40 max-sm:py-2":
                      post.data.draft || post.data.test,
                  },
                )}
                data-tags={post.data.tags?.join(", ")}
              >
                {post.data.draft ? (
                  <span class="max-md:self-center">❗DRAFT❗</span>
                ) : null}
                {post.data.test ? (
                  <span class="max-md:self-center">❗TEST❗</span>
                ) : null}
                <FormattedDate
                  class="opacity-50 max-sm:ml-1"
                  date={post.data.pubDate}
                />
                <a class="link-monochrome px-1" href={`/blog/${post.id}/`}>
                  <h2 class="line-clamp-1 text-xl max-sm:line-clamp-3">
                    {post.data.title}
                  </h2>
                </a>
              </article>
            </li>
          ))}
        </ul>
      ) : (
        <p class="mt-8 text-center">No posts yet! Check back later.</p>
      )
    }
  </section>
</MainLayout>
